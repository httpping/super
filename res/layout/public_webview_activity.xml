<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.vp.loveu.widget.PublicTitleView
        android:id="@+id/public_title_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_title_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

	 <ProgressBar
	     android:id="@+id/webview_progressBar"
	     style="@style/webviewhorzitalprogressbar_style"
	     android:layout_width="match_parent"
	     android:layout_height="1dip"
	     android:layout_alignParentRight="true"
	      android:layout_below="@+id/public_title_view" 
	     android:max="100" />

	 <RelativeLayout
	     android:layout_width="match_parent"
	     android:layout_height="match_parent" >

	     <WebView
	         android:id="@+id/public_webview"
	         android:layout_width="match_parent"
	         android:layout_height="match_parent" />

	     <com.vp.loveu.widget.TimeoutRemindView
	         android:id="@+id/timeoutRemindView1"
	         android:layout_width="match_parent"
	         android:layout_height="match_parent"
	         android:layout_alignParentLeft="true"
	         android:layout_alignParentTop="true"
	         android:background="@color/bg_gray"
	         android:visibility="gone"
	        >
	     </com.vp.loveu.widget.TimeoutRemindView>

	 </RelativeLayout>
 

</LinearLayout>
