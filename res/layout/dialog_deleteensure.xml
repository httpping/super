<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_deleteensure_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:weightSum="3" >

    <RelativeLayout
        android:id="@+id/deleteensure_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <TextView
            android:id="@+id/deleteensure_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="center" />
    </RelativeLayout>

    <View
        android:id="@+id/deleteensure_title_div"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#4cb5b5b5" />

    <RelativeLayout
        android:id="@+id/deleteensure_act_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <View
            android:id="@+id/deleteensure_act_div"
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:background="#4cb5b5b5" />

        <Button
            android:id="@+id/deleteensure_cancel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/deleteensure_act_div"
            android:background="@color/user_and_more_selector_bg"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/deleteensure_sure"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/deleteensure_act_div"
            android:background="@color/user_and_more_selector_bg"
            android:text="确定"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>