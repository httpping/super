<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="right"
  >

    <!-- android:layout_weight="7" -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:paddingBottom="3dp"
        android:layout_toLeftOf="@+id/head_image" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" >

              <com.vp.loveu.message.view.BubbleImageView
                  android:id="@+id/msg_image_body"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:maxHeight="90dp"
                  android:layout_toRightOf="@+id/left_status"
                  android:layout_marginRight="3dp"
                   app:bubble_angle="3dp"
	            app:bubble_arrowHeight="0dp"
	            app:bubble_arrowLocation="right"
	            app:bubble_arrowOffset="0dp"
	            app:bubble_arrowTop="0dp"
	            app:bubble_arrowWidth="0dp"
                 />

                <ImageView
                    android:id="@+id/left_status"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="3dp" />

        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/head_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/message_head_imgage_margin"
        android:layout_marginTop="2dp"
         />

</RelativeLayout>