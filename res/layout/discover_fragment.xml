<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.vp.loveu"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!--
         <com.vp.loveu.widget.PublicTitleView
        android:id="@+id/public_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </com.vp.loveu.widget.PublicTitleView>        -->

        <com.vp.loveu.discover.widget.DiscoverItemView
            android:id="@+id/discover_item_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:itemImage="@drawable/icon_course_online"
            custom:itemName="在线课程" >
        </com.vp.loveu.discover.widget.DiscoverItemView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divide_line_bg" />

        <LinearLayout
            android:id="@+id/course_items_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone" >
        </LinearLayout>

        <com.vp.loveu.discover.widget.DiscoverItemView
            android:id="@+id/discover_item_pua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:itemImage="@drawable/icon_pua"
            custom:itemName="PUA课堂" >
        </com.vp.loveu.discover.widget.DiscoverItemView>

        <LinearLayout
            android:id="@+id/pua_items_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone" >
        </LinearLayout>

        <com.vp.loveu.discover.widget.DiscoverItemView
            android:id="@+id/discover_item_lover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            custom:itemImage="@drawable/icon_loveu_one_to_one"
            custom:itemName="红娘一对一" >
        </com.vp.loveu.discover.widget.DiscoverItemView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divide_line_bg" />

        <com.vp.loveu.discover.widget.DiscoverItemView
            android:id="@+id/discover_item_tutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:itemImage="@drawable/icon_tutor_online"
            custom:itemName="在线导师" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divide_line_bg" />

        <com.vp.loveu.discover.widget.DiscoverItemView
            android:id="@+id/discover_item_promo_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:itemImage="@drawable/my_promotion_code"
            custom:itemName="优惠码" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divide_line_bg" 
            android:layout_marginBottom="20dip"/>
    </LinearLayout>

</ScrollView>