<?xml version="1.0" encoding="utf-8"?>
 <merge xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:gravity="center_horizontal"
     android:orientation="vertical" >
     <TextView
         android:id="@+id/timestamp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/vlink_item_msg_remind_text_color"
         android:layout_marginTop="18dp"
         android:textSize="@dimen/sub_textView_size10"
         android:singleLine="true"
         android:text="TextView" />
     
       <TextView
         android:id="@+id/push_notice_txt"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textColor="@color/black"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="15dp"
         android:layout_marginRight="15dp"
         android:padding="10dp"
         android:textSize="@dimen/sub_textView_size14"
         android:background="@drawable/push_notice_record_corner_round_all_bg"
         android:layout_marginBottom="2dp"
         android:text="TextView" />

 </merge>
