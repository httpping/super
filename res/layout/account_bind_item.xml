<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:clickable="true"
    android:background="@color/user_and_more_selector_bg" >

    <FrameLayout
        android:id="@+id/account_bind_item_flag"
        android:layout_width="45dip"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/account_bind_item_iv_icon"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_gravity="center"
            android:src="@drawable/icon_phonenumber" />
    </FrameLayout>

    <TextView
        android:id="@+id/account_bind_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/account_bind_item_flag"
        android:text="手机号码"
        android:textColor="#222222"
        android:textSize="14sp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/account_bind_item_tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/account_bind_item_tv_name"
        android:textColor="#999999"
        android:textSize="10sp" />

    <TextView
        android:gravity="center_vertical|right"
        android:id="@+id/account_bind_item_tv_bind"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:textColor="#999999"
        android:textSize="14sp" />

    <View
        android:id="@+id/account_bind_item_line"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="45dip"
        android:background="@color/divide_line_bg" />

</RelativeLayout>