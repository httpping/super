<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/user_and_more_selector_bg"
    android:orientation="vertical" >

    <View
        android:id="@+id/discover_lesson_empty_top"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:background="@color/user_and_more_selector_bg"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/discover_lesson_icon_left"
            android:layout_width="100dp"
            android:layout_height="95dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/discover_lesson_icon_left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/discover_lesson_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="3dp"
                android:maxLines="2"
                android:text="快速恋爱-让女生倒追你的方法"
                android:textColor="@color/normal_textView_color"
                android:textSize="@dimen/sub_textView_size15" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                
                <TextView
                    android:id="@+id/discover_lesson_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/normal_bg_orange"
                    android:textSize="@dimen/sub_textView_size16" />
                
                
                <TextView
                    android:layout_marginLeft="3dip"
                    android:visibility="gone"
                    android:id="@+id/discover_lesson_price_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="1dp"
                    android:textColor="#000000"
                    android:textSize="@dimen/sub_textView_size10" />
            </LinearLayout>
        </LinearLayout>
        <!--
             <ImageView
            android:id="@+id/discover_lesson_seven"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/discover_lesson_icon_left"
            android:src="@drawable/discover_home_lesson_seven"
            android:visibility="gone" />        -->

        <LinearLayout
            android:id="@+id/discover_lesson_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/discover_lesson_icon_left"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/discover_lesson_seven"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:background="@drawable/course_circle_text_shape"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/green_public"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/discover_lesson_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="7tian"
                android:textColor="@color/sub_textView_color66"
                android:textSize="@dimen/sub_textView_size10" />
        </LinearLayout>

        <TextView
            android:id="@+id/discover_lesson_listener"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:text="0人在学"
            android:textColor="@color/sub_textView_color99"
            android:textSize="@dimen/sub_textView_size10" />
    </RelativeLayout>

    <View
        android:id="@+id/discover_lesson_empty_bottom"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white"
        android:visibility="gone" />

</LinearLayout>