<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:su="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="标题"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:id="@+id/edit"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@null"
        android:maxLength="20"
        android:singleLine="true" />

    <TextView
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/green_public" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/line"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/frist_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="0.75dp"
            android:layout_marginTop="1.5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="取消"
            android:textColor="@color/green_public"
            android:textSize="@dimen/text_size_two" />

        <Button
            android:id="@+id/two_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.75dp"
            android:layout_marginTop="1.5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="确定"
            android:textColor="@color/green_public"
            android:textSize="@dimen/text_size_two" />
    </LinearLayout>

</LinearLayout>