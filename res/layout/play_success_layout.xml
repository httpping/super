<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/play_success_iv_close"
        android:layout_width="12dip"
        android:layout_height="12dip"
        android:layout_gravity="right"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:src="@drawable/icon_delete" />

    <TextView
        android:id="@+id/play_success_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="午后的爱情花园"
        android:textColor="#222222"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动时间:  " />

        <TextView
            android:id="@+id/play_success_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-02-13" />
    </LinearLayout>

    <com.vp.loveu.widget.CricleProgressView
        android:id="@+id/play_success_dialog_progress"
        android:layout_width="110dip"
        android:layout_height="110dip"
        android:layout_marginTop="29dip" />

    <ImageView
        android:id="@+id/play_success_iv_dimension"
        android:layout_width="83dip"
        android:layout_height="83dip"
        android:layout_marginTop="29dip" />

    <TextView
        android:id="@+id/play_success_tv_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="10dip"
        android:text="官方扫描此二维码，方可进场"
        android:textColor="#222222"
        android:textSize="12sp" />

</LinearLayout>