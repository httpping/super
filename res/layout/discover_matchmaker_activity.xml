<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.vp.loveu.widget.PublicTitleView
        android:id="@+id/public_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </com.vp.loveu.widget.PublicTitleView>

    <LinearLayout 
            android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/matchmaker_root_view"
        >
    
    <com.vp.loveu.widget.CircleImageView
        android:id="@+id/discover_maker_portrait"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/default_portrait"
         />

    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/discover_maker_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/normal_textView_color"
            android:textSize="@dimen/sub_textView_size16"
            android:text="红娘:" />

        <TextView
            android:visibility="gone"
            android:id="@+id/discover_maker_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="换一个" />
    </RelativeLayout>

    <TextView
        android:id="@+id/discover_help_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sub_textView_color99"
        android:textSize="@dimen/sub_textView_size12"
        android:layout_marginTop="10dp"
        android:text="已成功帮助0位用户" />

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="15dp"
        android:background="@color/bg_gray"
        >       
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
        android:layout_marginLeft="81dp"
        android:layout_marginRight="81dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:gravity="center"
                android:id="@+id/discover_sex_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/normal_bg_orange"
                android:textSize="@dimen/sub_textView_size14"
                android:text="找男朋友" />
            <View
                android:id="@+id/discover_sex_underline"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/normal_bg_orange" />
        </LinearLayout>

        <TextView
            android:id="@+id/discover_sex_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sub_textView_size14"
             android:textColor="@color/sub_textView_color66"
            android:text="找女朋友" />
    </RelativeLayout>
    
        </RelativeLayout>
    <EditText 
        android:id="@+id/discover_remarks"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
            android:paddingLeft="10dp"
    android:paddingTop="10dp"
        style="@style/matchmaker_editText_style"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:hint="输入你理想中的TA是什么样子!"
        android:gravity="top|left"
        android:textColor="@color/normal_editText_color"
        android:textColorHint="#CCCCCC"
        android:textSize="14sp"
        />
    <TextView 
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="红娘将为您匹配最符合你意愿的对象，并邀请双方线下见面会聊。官方保障约会安全和信息真实。"
        android:textSize="@dimen/sub_textView_size12"
        android:textColor="@color/sub_textView_color99"
        />
    
           <Button
           android:gravity="center"
            android:id="@+id/discover_btn_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/discover_matchmaker_btn_shape"
            android:text="提交给红娘"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
           
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
               
<TextView 
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:text="红娘服务为付费项目"
    android:textSize="@dimen/sub_textView_size10"
    android:textColor="@color/sub_textView_color99"
    />
</RelativeLayout>
</LinearLayout>
</LinearLayout>