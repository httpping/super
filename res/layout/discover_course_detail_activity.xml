<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vp="http://schemas.android.com/apk/res/com.vp.loveu"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/bg_gray">
    
        


    <!-- 头部标题 -->
    <com.vp.loveu.widget.PublicTitleView
        android:id="@+id/public_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </com.vp.loveu.widget.PublicTitleView>

    <!-- 中间详情区域 -->
    <WebView
        android:id="@+id/discover_course_webview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="49dp"
        android:layout_marginTop="44dp"
        android:background="@color/bg_gray"
        android:scrollbars="none" />

   
    <!-- 底部 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         android:layout_alignParentBottom="true"
        >
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divide_line_bg"
            />
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/discover_course_zixun"
            android:drawableTop="@drawable/discover_course_zixun"
            android:paddingTop="7dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/sub_textView_color99"
            android:textSize="@dimen/sub_textView_size12"
            android:gravity="center"
            android:text="咨询" />
     <TextView
          android:id="@+id/discover_course_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/normal_bg_orange"
            android:gravity="center"
            android:text="立即报名"
            android:textSize="16sp"
            android:textColor="@color/white"
             />
    </LinearLayout>
     </LinearLayout>
    <ProgressBar
        android:id="@+id/course_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
         />
      <com.vp.loveu.widget.TimeoutRemindView
	         android:id="@+id/timeoutRemindView1"
	         android:layout_width="match_parent"
	         android:layout_height="match_parent"
			    android:layout_marginBottom="49dp"
        android:layout_marginTop="44dp"
	         android:background="@color/bg_gray"
	         android:visibility="gone"
	        >
	     </com.vp.loveu.widget.TimeoutRemindView>
    
</RelativeLayout>