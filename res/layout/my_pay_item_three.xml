<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dip"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingBottom="20dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="20dip" >

    <TextView
        android:id="@+id/my_pay_item_three_tv_ordernumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单编号 :"
        android:textColor="#999999"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/my_pay_item_three_tv_ordertime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:paddingBottom="10dip"
        android:text="支付时间 :"
        android:textColor="#999999"
        android:textSize="12sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/divide_line_bg" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip" >

        <ImageView
            android:id="@+id/my_pay_item_three_iv_icon"
            android:layout_width="100dip"
            android:layout_height="95dip"
            android:scaleType="centerCrop"
            android:src="@drawable/a3" />

        <TextView
            android:id="@+id/my_pay_item_three_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:maxLines="4"
            android:ellipsize="end"
            android:layout_toRightOf="@id/my_pay_item_three_iv_icon"
             />
        
        <LinearLayout android:layout_width="wrap_content"
            android:layout_below="@id/my_pay_item_three_tv_content"
            android:layout_marginLeft="10dip"
             android:layout_marginTop="5dip"
            android:layout_toRightOf="@id/my_pay_item_three_iv_icon"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/my_pay_item_three_tv_money_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格:" />
        <TextView
            android:layout_marginLeft="2dip"
            android:textColor="@color/pay_ok_bg"
            android:id="@+id/my_pay_item_three_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/my_pay_item_three_btn_commit"
            android:layout_width="74dip"
            android:layout_height="24dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/commit_green_shape"
            android:text="提意见"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>