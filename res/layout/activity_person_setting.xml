<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
		<com.vp.loveu.widget.PublicTitleView
		    android:id="@+id/public_title_view"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:visibility="gone"/>
        <RelativeLayout
            android:id="@+id/go_person_center"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/user_and_more_selector_bg" >

            <ImageView
                android:id="@+id/user_head_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/default_portrait" />

            <TextView
                android:id="@+id/user_nice_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/user_head_image"
                android:text="MOMO"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/textSize16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_more" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/online_remind"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:background="@color/user_and_more_selector_bg" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="上线时提醒我"
                android:textColor="@color/normal_editText_color"
                android:textSize="@dimen/textSize15" />

            <ImageView
				android:id="@+id/online_remind_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/public_check_btn_bg" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divide_line_bg" />

        <RelativeLayout
            android:id="@+id/clear_chat_msg"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/user_and_more_selector_bg" >

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="清空聊天记录"
                android:textColor="@color/normal_editText_color"
                android:textSize="@dimen/textSize15" />
        </RelativeLayout>

        <View
            android:id="@+id/clear_chat_msg_divier"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divide_line_bg" />

        <RelativeLayout
            android:id="@+id/go_black"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/user_and_more_selector_bg" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="拉黑"
                android:textColor="@color/normal_editText_color"
                android:textSize="@dimen/textSize15" />

            <ImageView
                android:id="@+id/go_black_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:clickable="false"
                android:src="@drawable/public_check_btn_bg" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divide_line_bg" />

        <RelativeLayout
            android:id="@+id/report_person"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/user_and_more_selector_bg" >

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="举报"
                android:textColor="@color/normal_editText_color"
                android:textSize="@dimen/textSize15" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
