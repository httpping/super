<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:su="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:paddingBottom="20dp"
    android:orientation="vertical" >

    <TextView
        android:layout_width="280dp"
        android:layout_height="1dp" />

    <TextView
        android:id="@+id/tv_remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="完成一项测试\n了解自己的类型\n也可匹配合适的TA"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_two" />

    <Button
        android:id="@+id/btn_one"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/record_corner_round_red_10"
        android:text="马上去测试"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_two" />

    <Button
        android:id="@+id/btn_two"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/record_corner_round_bg_w_btn_10"
        android:text="取消"
        android:textColor="@color/text"
        android:textSize="@dimen/text_size_two" />

</LinearLayout>