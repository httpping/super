<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dip"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="20dip" >

        <TextView
            android:id="@+id/my_pay_item_two_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textColor="#999999"
            android:textSize="12sp" />

        <Button
            android:id="@+id/my_pay_item_two_btn_packet"
            android:layout_width="74dip"
            android:layout_height="24dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/commit_shape"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dip"
        android:background="@color/divide_line_bg" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="20dip" >

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/my_pay_item_two_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我发的情感求助" />

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/my_pay_item_two_iv_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_in" />
    </RelativeLayout>

</LinearLayout>