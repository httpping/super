<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dip"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="75dip"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/my_center_player_top_flag"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号："
                android:textColor="#999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/my_center_play_tv_ordernumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_center_player_top_flag"
            android:layout_marginTop="10dip"
            android:paddingLeft="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付时间："
                android:textColor="#999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/my_center_play_tv_ordertime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/my_center_play_bt_flag"
            android:layout_width="74dip"
            android:layout_height="24dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:background="#FF8000"
            android:text="dsfsdf"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_marginLeft="10dip"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/divide_line_bg" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip" >

        <include layout="@layout/index_active_item_show" />
    </FrameLayout>

</LinearLayout>