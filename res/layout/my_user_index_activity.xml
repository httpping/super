<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/user_index_scrollview"
    android:background="@color/bg_gray"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/bg_gray"
        android:orientation="vertical" >

        <include layout="@layout/you_center_show_user_info" />

        <RelativeLayout
            android:id="@+id/user_index_rl_dll"
            android:layout_width="fill_parent"
            android:layout_height="55dip"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/user_index_tv_flag"
                style="@style/my_index_tv_style"
                android:text="她的动态" />

            <ImageView
                style="@style/my_index_iv_arrows"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_more" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/my_index_photo_container"
            android:layout_width="fill_parent"
            android:layout_height="100dip"
            android:layout_marginTop="20dip"
            android:background="#ffffff" >

            <TextView
                android:layout_width="65dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dip"
                android:gravity="center_vertical"
                android:text="相册"
                android:textColor="#222222"
                android:textSize="15sp" />

            <HorizontalScrollView
                android:scrollbars="none"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/user_index_iv_container"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/user_index_rl_changed"
            android:layout_width="fill_parent"
            android:layout_height="55dip"
            android:layout_marginBottom="50dip"
            android:layout_marginTop="20dip"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/user_index_tv_send"
                style="@style/my_index_tv_style"
                android:text="婚恋资料" />

            <ImageView
                android:id="@+id/user_index_iv_send"
                style="@style/my_index_iv_arrows"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_more" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>