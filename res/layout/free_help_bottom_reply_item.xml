<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.vp.loveu.widget.CircleImageView
        android:id="@+id/free_help_bottom_iv_icon"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"
        android:src="@drawable/a4" >
    </com.vp.loveu.widget.CircleImageView>

    <TextView
        android:id="@+id/free_help_bottom_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:textColor="#999999"
        android:visibility="gone"
        android:text="3分钟前" />

    <LinearLayout
        android:layout_marginTop="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/free_help_bottom_iv_icon"
        android:orientation="vertical"
        android:paddingBottom="5dip" >

        <TextView
            android:id="@+id/free_help_bottom_item_tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="娜娜"
            android:textColor="#262626"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_marginTop="10dip"
            android:id="@+id/free_help_bottom_content_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/free_help_bottom_item_line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/divide_line_bg" />

</RelativeLayout>