<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/user_and_more_selector_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/dialog_hint_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:padding="10dp" >

        <TextView
            android:id="@+id/dialog_hint"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/dialog_title"
            android:textColor="@color/text_black"
            android:textSize="@dimen/textSize15" />

        <TextView
            android:id="@+id/dialog_hint_extra"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_hint"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/dialog_title"
            android:textColor="@color/text_black"
            android:textSize="@dimen/textSize12" />
    </RelativeLayout>

    <View
        android:id="@+id/dialog_hint_div"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/divide_line_bg" />

    <RelativeLayout
        android:id="@+id/dialog_hint_close_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <TextView
            android:id="@+id/dialog_hint_close"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/user_and_more_selector_bg"
            android:gravity="center"
            android:text="@string/txt_cancel"
            android:textColor="@color/text_black"
            android:textSize="@dimen/textSize13" />
    </RelativeLayout>

</LinearLayout>