            <gradient  
                android:startColor="#10BB7D"  
                android:endColor="#10BB7D"  
                android:angle="360" />  
                
            <stroke  
                android:width="0dp"  
                android:color="#CCCCCC" />  
            <corners  
                android:radius="2dp" />  

        </shape> 
        
    </item>
